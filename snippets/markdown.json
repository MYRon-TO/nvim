{
    "todo": {
        "prefix": [ "todo" ],
        "body": [
            "<-- !todo: ${1:discription} -->$2"
        ],
        "discription": "todo",
        "scope": "markdown"
    },
    "CodeBlock": {
        "prefix": [ "C" ],
        "body": [
            "```$1",
            "```$2"
        ],
        "discription": "Code Block",
        "scope": "markdown"
    },
    "CodeInline": {
        "prefix": [ "c" ],
        "body": [
            "`$1`$2"
        ],
        "discription": "Code Inline",
        "scope": "markdown"
    },
    "Bold": {
        "prefix": [ "b" ],
        "body": [
            " **$1** $2"
        ],
        "discription": "Bold",
        "scope": "markdown"
    },
    "Italic": {
        "prefix": [ "i" ],
        "body": [
            " *$1* $2"
        ],
        "discription": "Italic",
        "scope": "markdown"
    },
    "Link": {
        "prefix": [ "l" ],
        "body": [
            "[$1]($2)$3"
        ],
        "discription": "Link",
        "scope": "markdown"
    },
    "Image": {
        "prefix": [ "img" ],
        "body": [
            "![${1:alt}]($2)$3"
        ],
        "discription": "Image",
        "scope": "markdown"
    },
    "Highlight": {
        "prefix": [ "h" ],
        "body": [
            " <mark>$1</mark> $2"
        ],
        "discription": "Highlight",
        "scope": "markdown"
    },
    "Underline": {
        "prefix": [ "u" ],
        "body": [
            " <u>$1</u> $2"
        ],
        "discription": "Underline",
        "scope": "markdown"
    },
    "Strikethrough": {
        "prefix": [ "s" ],
        "body": [
            " ~~$1~~ $2"
        ],
        "discription": "Strikethrough",
        "scope": "markdown"
    }
}
